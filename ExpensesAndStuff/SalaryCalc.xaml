<Window
    x:Class="ExpensesAndStuff.SalaryCalc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExpensesAndStuff"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SalaryCalc"
    Width="400"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>

            <StackPanel>
                <TextBlock>Enter Yearly Salary</TextBlock>
                <TextBox Text="{Binding YearlySalary}" />
                <TextBlock>Enter yearly hourcount</TextBlock>
                <TextBox Text="{Binding YearlyHours}" />
            </StackPanel>

            <Button Command="{Binding CalculateCommand}" Content="Calculate Salary!" />

            <StackPanel>
                <TextBlock>Monthly salary is:</TextBlock>
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding MonthlySalary, StringFormat=C}" />
            </StackPanel>


        </StackPanel>
    </Grid>
</Window>
